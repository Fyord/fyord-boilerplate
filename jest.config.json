{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "moduleNameMapper": {
    "^.+\\.(css|less|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json",
        "diagnostics": false
      }
    ]
  },
  "testMatch": [
    "**/*.(test|spec).(ts|tsx)"
  ],
  "testEnvironment": "jsdom",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "src/app.ts",
    "src/environments.ts",
    "src/index.ts",
    "src/layouts.ts",
    "src/service-worker.ts",
    "module.ts"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "src/**/*.(ts|tsx)"
  ]
}
