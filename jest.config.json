{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "moduleNameMapper": {
    "^.+\\.(css|less|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json",
        "diagnostics": false,
        "isolatedModules": true
      }
    ]
  },
  "testMatch": [
    "**/*.(test|spec).(ts|tsx)"
  ],
  "testEnvironment": "jsdom",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "enzyme.js"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "text-summary"
  ]
}
